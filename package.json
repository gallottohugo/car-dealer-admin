{
  "name": "car-dealer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "clear": "rm -rf ./dist",
    "prebuild": "npm run lint",
    "build": "npm run clear && tsc",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "start:dev": "npm run db:migrate:prod && nodemon app.ts",
    "start:prod": "npm run db:migrate:prod && npm run start",
    "dev-server": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/app.js\"",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "npm run db:migrate:test && dotenv -e .env.test jest -i --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adminjs/express": "^5.0.1",
    "@adminjs/passwords": "^3.0.1",
    "@adminjs/prisma": "^3.0.1",
    "@adminjs/upload": "^3.0.1",
    "@aws-sdk/client-s3": "^3.289.0",
    "@prisma/client": "4.8.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.17.5",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "adminjs": "^6.7.2",
    "argon2": "^0.30.3",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^7.32.0",
    "express-async-handler": "^1.2.0",
    "pino-http": "^8.3.1",
    "prisma": "^4.8.0",
    "ts-jest": "^29.0.5",
    "typescript": "4.4.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^10.0.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.4.3",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0"
  }
}
